<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="review">
	<select id="list" resultType="com.ict.project.vo.ReviewVO">
		select * from review where r_active=0
	</select>
	
	<select id="detail" parameterType="com.ict.project.vo.ReviewVO" resultType="com.ict.project.vo.ReviewVO">
		select * from review where r_idx = #{r_idx}
	</select>
	
	<insert id="insert" parameterType="com.ict.project.vo.ReviewVO">
		insert into review(r_title, r_content) 
		values (#{r_title}, #{r_content})
	</insert>
	
	<update id="delete" parameterType="com.ict.project.vo.ReviewVO">
		update review set r_active = 1
		where r_idx = #{r_idx}
	</update>
	
	<update id="update" parameterType="com.ict.project.vo.ReviewVO">
		update review 
		set r_title=#{r_title}, r_content=#{r_content} 
		where r_idx=#{r_idx}
	</update>
</mapper>